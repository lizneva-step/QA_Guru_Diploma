{
  "name": "lt-diploma-project",
  "version": "1.0.0",
  "description": "Unified UI and API testing project",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test tests/ui",
    "test:ui:headed": "npx playwright test tests/ui --headed",
    "test:api": "npx playwright test tests/api",
    "test:api:functional": "npx playwright test tests/api --grep=@functional",
    "test:api:validation": "npx playwright test tests/api --grep=@validation",
    "test:api:error_handling": "npx playwright test tests/api --grep=@error_handling",
    "test:api:get": "npx playwright test tests/api --grep=@GET",
    "test:api:post": "npx playwright test tests/api --grep=@POST",
    "test:api:put": "npx playwright test tests/api --grep=@PUT",
    "test:api:delete": "npx playwright test tests/api --grep=@DELETE",
    "test:api:patch": "npx playwright test tests/api --grep=@PATCH"
  },
  "keywords": ["ui-testing", "api-testing", "playwright", "ui"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "allure-playwright": "^3.4.2",
    "axios": "^1.13.1",
    "config": "^4.1.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "nyc": "^15.1.0"
  }
}
